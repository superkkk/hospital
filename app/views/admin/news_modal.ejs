<!-- Modal -->
<div id="NewsModal" tabindex="-1" role="dialog" aria-labelledby="NewsModalLabel" class="modal fade">
  <div role="document" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">&times;</span></button>
        <h4 id="NewsModalLabel" class="modal-title">新增新闻</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <input id="title" type="text" placeholder="请输入标题" class="form-control"/>
          </div>
          <textarea id="textarea1" style="height:400px; width:100%;"></textarea>
        </form>
        <div id="uploadContainer">
          <input id="btnBrowse" type="button" value="选择文件"/>
          <input id="btnUpload" type="button" value="上传文件"/>
          <ul id="fileList"></ul>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
        <button type="button" class="btn btn-primary btn-submit">确定</button>
      </div>
    </div>
  </div>
</div>
